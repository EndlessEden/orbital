#!/bin/sh

args="--shell=@Nuclear_PREFIX@/lib/nuclear-shell/nuclear-shell.so --nuclear-client=@CMAKE_INSTALL_PREFIX@/libexec/startorbital"

if [ -z "$DBUS_SESSION_BUS_ADDRESS" ] && type dbus-launch >/dev/null; then
    eval `dbus-launch --sh-syntax`
fi

if [ -z "$DISPLAY" ]; then
    weston-launch -- $args
else
    weston $args
fi

if [[ $DBUS_SESSION_BUS_PID ]]; then
    kill $DBUS_SESSION_BUS_PID
fi
